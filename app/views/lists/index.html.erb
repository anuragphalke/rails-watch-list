<div class="container mt-4">
  <br><br><h1 class="text-center">My Movie Lists</h1><br><br>

  <div class="text-center mb-4">
    <%= link_to "Create a New List", new_list_path, class: "btn btn-primary w-auto" %>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <% @lists.each do |list| %>
        <div class="mb-2">
          <%= link_to list.name, list_path(list), class: "btn btn-secondary w-100 d-block mx-auto text-start" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
